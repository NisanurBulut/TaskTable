
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <div class="card m-3" style="max-width: 20rem;">
            <div class="card-header text-white bg-primary">Tamamlanan Görevler</div>
            <div class="card-body">
                <h4 class="card-title">Tamamlanan Görev Sayısı</h4>
                <p class="card-text display-4">@ViewBag.CompletedTaskCount</p>
                <p class="card-text text-right">
                    <a asp-action="Index" asp-controller="Task">
                        İncele
                        <i class="fas fa-chevron-circle-right"></i>
                    </a>
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card m-3" style="max-width: 20rem;">
            <div class="card-header text-white bg-warning">Bekleyen Görevler</div>
            <div class="card-body">
                <h4 class="card-title">Yazılan Rapor Sayısı</h4>
                <p class="card-text display-4">@ViewBag.UnCompletedTaskCount</p>
                <p class="card-text text-right">
                    <a asp-action="Index" asp-controller="Task" class="text-dark">
                        İncele
                        <i class="fas fa-chevron-circle-right"></i>
                    </a>
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card m-3" style="max-width: 20rem;">
            <div class="card-header text-white bg-dark">Yazılan Raporlar</div>
            <div class="card-body">
                <h4 class="card-title">Yazılan Rapor Sayısı</h4>
                <p class="card-text display-4">@ViewBag.ReportCount</p>
                <p class="card-text text-right">
                    <a asp-action="Index" asp-controller="TaskOrder" class="text-warning">
                        İncele
                        <i class="fas fa-chevron-circle-right"></i>
                    </a>
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card m-3" style="max-width: 20rem;">
            <div class="card-header text-white bg-info">Bildirimler</div>
            <div class="card-body">
                <h4 class="card-title">Okunmamış Bildirim Sayısı</h4>
                <p class="card-text display-4">@ViewBag.UnReadNotificationCount</p>
                <p class="card-text text-right">
                    <a asp-action="Index" asp-controller="Notification" class="text-info">
                        İncele
                        <i class="fas fa-chevron-circle-right"></i>
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>