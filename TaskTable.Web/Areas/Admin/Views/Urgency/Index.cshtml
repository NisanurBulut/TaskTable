@model List<TaskTable.Entity.Concrete.UrgencyEntity>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@if (Model.Any())
{
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th>Tanım</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        <a asp-area="" asp-controller="" asp-action="" 
                           class="btn btn-sm btn-warning" id="@item.Id">
                            <i class="fas fa-edit fa-1x"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
<div class="text-center lead mt-4">
    <p class="lead">Kayıt bulunamadı</p>
  <a asp-area="Admin" asp-controller="Urgency" 
     asp-action="AddUrgency" 
     class="btn btn-sm btn-outline-primary my-2"><i class="fas fa-plus mr-2"></i>Yeni Aciliyet</a>
</div>
}