@model List<TaskTable.Web.Areas.Admin.Models.TaskListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Any())
{
    <a asp-action="AddTask" class="btn btn-sm btn-info my-2">Bir görev oluştur</a>
    <table class="table table-hover table-sm">
        <tr>
            <th>Ad</th>
            <th>Açıklama</th>
            <th>Oluşturulma Tarihi</th>
            <th>Aciliyet Durum</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ad</td>
                <td>@item.Aciklama</td>
                <td>@item.OlusturulmaTarihi.ToString("D")</td>
                <td>@item.Urgency.Description</td>                
                <td>
                    <a>Sil</a>
                    <a class="btn btn-sm btn-warning" asp-action="EditTask" asp-route-id="@item.Id">Güncelle</a>
                </td>
            </tr>
        }
    </table>
}
else
{

    <div class="p-3 text-center mt-3">
        <p class="lead">
            Herhangi bir görev bulunamadı
        </p>
        <a asp-area="Admin" asp-controller="Task" asp-action="AddTask" class="btn btn-sm btn-info">Bir görev oluştur</a>
    </div>
}