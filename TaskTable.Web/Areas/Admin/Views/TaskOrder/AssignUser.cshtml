@model TaskListViewModel
@{
    ViewData["Title"] = "AssignUser";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row mt-2">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h4 class="lead text-center pt-2">Görev Bilgileri</h4>
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    @Model.Ad
                </h5>
                <p class="card-text">
                    @Model.Aciklama
                </p>
                <p class="card-text">
                    <strong>Aciliyet Durumu : </strong>
                    <span class="badge badge-info">@Model.Urgency.Description</span>
                </p>
                <p class="card-text"> <small>@Model.OlusturulmaTarihi.ToString("D")</small></p>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        @foreach (var item in (List<AppUserListViewModel>)ViewBag.Kullanicilar)
        {
            <div class="card mb-3">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="~/img/@item.Picture" class="card-img" alt="@item.Name">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name @item.Surname</h5>
                            <p class="card-text">Bir görevi var mı</p>
                            <p class="card-text"><small class="text-muted">@item.Email</small></p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

