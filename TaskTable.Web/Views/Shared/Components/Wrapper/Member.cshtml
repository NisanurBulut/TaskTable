@model AppUserListViewModel;
@{ string active = TempData["active"]?.ToString(); }
<!-- Sidebar -->
<div class="border border-primary border-left-0 border-top-0 border-bottom-0 border-right" id="sidebar-wrapper">
    <div class="sidebar-heading">
        <img src="~/img/@Model.Picture" alt="@Model.Name" style="height:10rem!important;width:10rem!important;" class="w-100 img-thumbnail" />
        <h4>@Model.Name @Model.Surname</h4>
    </div>
    <div class="list-group list-group-flush">
        <a asp-area="Member"
           asp-controller="Home"
           asp-action="Index"
           class="list-group-item list-group-item-action @(active=="home"?"active":"")">
            <i class="fas fa-home fa-1x mr-2">
            </i>Anasayfa
        </a>
        <a asp-area="Member"
           asp-controller="TaskOrder"
           asp-action="Index"
           class="list-group-item list-group-item-action @(active=="taskorder"?"active":"")">
            <i class="fas fa-arrow-alt-circle-down fa-1x mr-2">
            </i>Gelen İş Emirleri
        </a>
        <a asp-area="Member"
           asp-controller="Task"
           asp-action="Index"
           class="list-group-item list-group-item-action @(active=="task"?"active":"")">
            <i class="fas fa-arrow-alt-circle-up fa-1x mr-2"></i>Tamamlanan İş Emirleri
        </a>
        <a asp-area="Member"
           asp-controller="Notification"
           asp-action="Index" class="list-group-item list-group-item-action @(active=="notification"?"active":"")">
            <i class="fas fa-bell fa-1x mr-2"></i> Bildirimler
            <span class="badge badge-info">
                <small>@Model.NotificationsCount</small>
            </span>
        </a>
        <a asp-area="Member"
           asp-controller="Profil"
           asp-action="Index" class="list-group-item list-group-item-action @(active=="profile"?"active":"")">
            <i class="fas fa-user fa-1x mr-2"></i>Profil
        </a>
        <a asp-area=""
           asp-controller="Home"
           asp-action="SignOut" class="list-group-item list-group-item-action ">
            <i class="fas fa-sign-out-alt fa-1x mr-2"></i>Çıkış Yap
        </a>
    </div>
</div>